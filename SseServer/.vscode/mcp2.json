{
    "servers": {
        "vectordb-lookup": {
            "command": "python",
            "args": [
                "-u",
                "vectordb_lookup_server.py",
                "--host",
                "0.0.0.0"
            ],
            "env": {
                "OPENAI_API_KEY": "<YOUR_OPENAI_API_KEY>"
            }
        },
        "memory": {
            "type": "stdio",
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-memory",
                "--persist",
                "--file",
                "memory.json"
            ]
        },
        "brave-search": {
            "type": "stdio",
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-brave-search",
            ],
            "env": {
                "BRAVE_API_KEY": ""
            }
        },
    }
}